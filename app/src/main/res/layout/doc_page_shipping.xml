<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:orientation="vertical">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/input_need_shipping_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:splitTrack="true"
            android:text="Нужна доставка"
            android:textOff="Нет"
            android:textOn="Да" />

        <LinearLayout
            android:id="@+id/llShippingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/dotted_underline" />

            <!--DATE-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilDate"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:elevation="6dp"
                    android:hint="Дата доставки"

                    android:orientation="horizontal"
                    app:hintEnabled="true">


                    <!--<EditText-->
                    <android.support.design.widget.TextInputEditText
                        android:selectAllOnFocus="true"
                        android:id="@+id/input_shipping_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"

                        />


                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <!--TIME-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/doc_page_shipping_time_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/input_time_from"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:text="c " />

                <EditText
                    android:selectAllOnFocus="true"
                    android:id="@+id/input_time_from"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/doc_page_shipping_time_caption"
                    android:hint="время с"
                    android:inputType="number"
                    android:text="0:00" />

                <TextView
                    android:id="@+id/doc_page_shipping_time_caption_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/input_time_from"
                    android:layout_toRightOf="@+id/input_time_from"
                    android:text=" по " />

                <EditText
                    android:selectAllOnFocus="true"
                    android:id="@+id/input_time_to"

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/doc_page_shipping_time_caption_to"
                    android:hint="по"
                    android:inputType="number"
                    android:text="0:00" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Адрес доставки">

                    <android.support.design.widget.TextInputEditText
                        android:selectAllOnFocus="true"
                        android:id="@+id/input_shipping_address"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/caption_address"
                        android:ems="10"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/input_vehicle_type"
                    android:layout_alignParentLeft="true"
                    android:text="Тип ТС" />

                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/input_vehicle_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:minWidth="200dp"
                    android:text="ТипТС"
                    tools:text="Тип ТС" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">


                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/input_starting_point"
                    android:layout_alignParentLeft="true"
                    android:text="Начальная точка" />

                <Spinner
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/input_starting_point"

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5sp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minWidth="200dp"
                    android:text="ТипТС"
                    tools:text="Тип ТС" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlroute"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/shipping_route_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/input_route_text"
                    android:layout_alignParentLeft="true"
                    android:text="Маршрут" />


                <AutoCompleteTextView
                    android:id="@+id/input_route_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/shipping_route_caption"
                    android:hint="Маршрут"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_alignParentLeft="true"
                    android:id="@+id/til_shipping_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Стоимость доставки">

                    <android.support.design.widget.TextInputEditText
                        android:enabled="false"
                        android:selectAllOnFocus="true"
                        android:id="@+id/input_shipping_cost"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:minWidth="200dp" />

                </android.support.design.widget.TextInputLayout>


            </RelativeLayout>


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/input_need_unload_checkbox"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:padding="5dp"
                android:text="Нужна разгрузка" />

            <RelativeLayout
                android:id="@+id/rlUnloadLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="45dp"
                android:padding="5dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_Workers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:hint="Грузчики">


                    <android.support.design.widget.TextInputEditText
                        android:selectAllOnFocus="true"
                        android:id="@+id/input_workers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:minWidth="150dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_unload_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:hint="Стоимость разгрузки">


                    <android.support.design.widget.TextInputEditText
                        android:selectAllOnFocus="true"
                        android:id="@+id/input_unload_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/doc_page_shipping_unloadcost_text"
                        android:layout_alignParentRight="true"
                        android:inputType="number"
                        android:minWidth="150dp" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>