<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/llNeedShipping"
        android:layout_width="match_parent">

        <CheckBox
            android:text="Нужна доставка"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbNeedShipping"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="ТипТС"
            android:ems="10"
            android:id="@+id/edtVehicleType"
            android:layout_below="@+id/cbNeedShipping"
            android:layout_alignParentStart="true"
            tools:text="Тип ТС"
            android:layout_toStartOf="@+id/edtWorkers" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Начальная точка маршрута"
            android:ems="10"
            android:id="@+id/edtStartingPoint"
            android:layout_below="@+id/edtVehicleType"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Маршрут"
            android:ems="10"
            android:id="@+id/edtRoute"
            android:layout_below="@+id/edtStartingPoint"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edtShippingCost"
            android:text="Стоимость доставки"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/edtRoute"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVoiceAddress"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/edtShippingAddress"
                android:text="Адрес доставки"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llNeedShipping"
        android:id="@+id/llNeedUnload">

        <CheckBox
            android:text="Нужна разгрузка"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbNeedUnload"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtUnloadCost"
            android:text="Стоимость разгрузки"
            android:layout_below="@+id/cbNeedUnload"
             />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtWorkers"
            android:text="Количество грузчиков"
            android:layout_below="@+id/edtUnloadCost"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llNeedUnload"
        android:layout_alignParentStart="true"
        android:id="@+id/llShippingDate">

        <TextView
            android:text="Дата доставки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edtShippingDate"
            android:layout_alignParentStart="true"
            android:id="@+id/tvShippingDate"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_below="@+id/edtShippingCost"
            android:layout_toEndOf="@+id/tvTotalShippingCost"
            android:id="@+id/edtShippingDate"
            android:text="Дата доставки"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llShippingDate"
        android:id="@+id/llShippingTime">

        <TextView
            android:text="время доставки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/tvShippingTime"
            android:layout_below="@+id/tvShippingDate"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtShippingTimeFrom"
            android:text="С 09"
            android:layout_alignBaseline="@+id/edtShippingTimeTo"
            android:layout_alignBottom="@+id/edtShippingTimeTo"
            android:layout_toEndOf="@+id/tvPageShjipping_DocumentTotal"
            android:layout_marginStart="14dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtShippingTimeTo"
            android:text="до 19"
            android:layout_width="60dp"
            android:layout_marginStart="22dp"
            android:layout_alignBottom="@+id/tvShippingTime"
            android:layout_toEndOf="@+id/edtShippingTimeFrom"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/llShippingTime"
        android:id="@+id/llShippingTotal">

        <TextView
            android:text="Сумма документа"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPageShjipping_DocumentTotal"
            android:textStyle="bold"
            tools:textStyle="bold"
            android:textSize="22sp"
            android:layout_below="@+id/tvTotalShippingCost"

             />

        <TextView
            android:text="Итого доставка"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalShippingCost"
            android:textStyle="bold"
            tools:textStyle="bold"
            android:textSize="22sp"
            android:layout_below="@+id/edtShippingCost"
            />
    </LinearLayout>



</RelativeLayout>
</ScrollView>