<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:background="@color/accent_material_dark"
        android:backgroundTint="@color/accent_material_dark"
        android:backgroundTintMode="src_in"
        android:elevation="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:contentPaddingTop="15sp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/poc_page_requisites_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent_material_dark"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Название:"
            android:textColor="@color/accent_material_light" />


        <TextView
            android:id="@+id/doc_page_requisites_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/poc_page_requisites_title"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Значение реквизита"
            android:textColor="@color/accent_material_light" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

