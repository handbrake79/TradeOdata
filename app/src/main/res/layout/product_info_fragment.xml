<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light"
    android:id="@+id/linearlayoutProductInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/card_prod_info_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductInfo_ProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Название товара, длинное-предлинное"
                android:textSize="14sp"
                android:textColor= "@color/accent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductInfo_outofstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bpRed"
                android:padding="15dp"
                android:text="Товара нет в наличии"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvStock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_prod_info_caption"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/btnSelectStock"
        />

    <Button
        android:id="@+id/btnSelectStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/accent"
        android:text="Выбрать" />

</RelativeLayout>