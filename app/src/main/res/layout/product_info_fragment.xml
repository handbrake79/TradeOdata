<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayoutProductInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/card_prod_info_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/tvProductInfo_ProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Название товара, длинное-предлинное"
            android:textSize="14dp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_alignStart="@+id/card_prod_info_caption"
        android:layout_alignEnd="@+id/btnSelectStock"
        android:id="@+id/rvStock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSelectStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать" />

</RelativeLayout>