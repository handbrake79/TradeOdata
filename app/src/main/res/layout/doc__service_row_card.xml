<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_order_service_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_order_service_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bpWhite"
        android:gravity="left"
        android:padding="16dp">

        <TextView
            android:textColor="@color/accent"
            android:id="@+id/doc__servicecard_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:text="Номенклатура" />


        <TextView
            android:height="30dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/doc__servicecard_product"
            android:id="@+id/doc__servicecard_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/accent"
            android:text="123.45" />

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/doc__servicecard_price"
            android:layout_below="@+id/doc__servicecard_product"
            android:id="@+id/doc__servicecard_price_caption"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="руб."/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/doc__servicecard_price_caption"
            android:layout_below="@+id/doc__servicecard_product"

            android:id="@+id/doc__servicecard_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="-" />

        <TextView
            android:gravity="center"
            android:layout_height="30dp"
            android:textColor="@color/accent"
            android:layout_toRightOf="@+id/doc__servicecard_minus"
            android:layout_below="@+id/doc__servicecard_product"
            android:id="@+id/doc__servicecard_qty"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Количество"

            android:textStyle="bold" />


        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/doc__servicecard_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/doc__servicecard_product"
            android:layout_toRightOf="@+id/doc__servicecard_qty"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/gray"
            android:textStyle="bold"
            tools:text="+"

            />





        <TextView
            android:gravity="center"
            android:height="30dp"
            android:layout_toRightOf="@+id/doc__servicecard_plus"
            android:id="@+id/tv_DocSale_Services_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doc__servicecard_product"
            android:layout_marginLeft="10dp"
            android:text="Сумма"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:height="30dp"
            android:id="@+id/tv_DocSale_Services_Rub_Char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doc__servicecard_product"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_DocSale_Services_Total"
            android:text="р."
            tools:text="руб."/>


    </RelativeLayout>
</android.support.v7.widget.CardView>