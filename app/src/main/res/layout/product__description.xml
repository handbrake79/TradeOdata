<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.sk42.tradeodata.Activities.Product.DescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bpWhite">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/noimg" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/dotted_underline" />

        <TextView
            android:id="@+id/tvProduct_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Название товара, длинное-предлинное"
            android:textColor="@color/bpblack"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/tvProduct_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена"
                android:textColor="@color/bpRed_focused"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/tvProduct_Code_Cap"
                android:layout_toRightOf="@id/tvProduct_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Код" />

            <TextView
                android:id="@+id/tvProduct_Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="УТН000000"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvProduct_Code_Cap" />

            <TextView
                android:id="@+id/tvProduct_SKU_Cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Арт."
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvProduct_Code"
                android:layout_toEndOf="@+id/tvProduct_Code"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvProduct_SKU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:text="АРТ000000000"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvProduct_SKU_Cap"
                android:layout_toEndOf="@+id/tvProduct_SKU_Cap"
                android:layout_marginLeft="2dp" />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dotted_underline" />

        <TextView
            android:id="@+id/tvProduct_Show_Hide_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:paddingTop="5dp"
            android:text="Показать описание"

            android:textColor="@color/bpBlue"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/dotted_underline" />

        <TextView
            android:id="@+id/tvProduct_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingTop="5dp"
            android:text="Длинное многострочное описание товара. Это очень хороший товар, его обязательно купят."

            android:textColor="@color/bpLine_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
