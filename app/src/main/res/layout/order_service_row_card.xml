<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_order_service_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_order_service_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_DocSale_Services_Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Номенклатура"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/tv_DocSale_Services_Qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_DocSale_Services_Product"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"

            android:text="Количество" />


        <TextView
            android:id="@+id/tv_DocSale_Services_Asterisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_DocSale_Services_Qty"

            android:layout_marginLeft="3dp"

            android:layout_toEndOf="@+id/tv_DocSale_Services_Qty"
            android:layout_toRightOf="@+id/tv_DocSale_Services_Qty"
            android:text="*" />

        <TextView
            android:id="@+id/tv_DocSale_Services_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tv_DocSale_Services_Product"

            android:layout_marginLeft="3dp"

            android:layout_toEndOf="@+id/tv_DocSale_Services_Asterisk"
            android:layout_toRightOf="@+id/tv_DocSale_Services_Asterisk"
            android:text="Цена" />


        <TextView
            android:id="@+id/tv_DocSale_Services_EqualsSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="="
            android:layout_below="@+id/tv_DocSale_Services_Product"
            android:layout_toRightOf="@+id/tv_DocSale_Services_Price"
            />

        <TextView
            android:id="@+id/tv_DocSale_Services_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Сумма"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_DocSale_Services_Product"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_DocSale_Services_Rub_Char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="р."
            android:layout_toRightOf="@id/tv_DocSale_Services_Total"
            android:layout_below="@id/tv_DocSale_Services_Product"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>